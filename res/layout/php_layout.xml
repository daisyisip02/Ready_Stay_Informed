<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5F4FE" >

<ScrollView android:layout_width="400dp"
        android:layout_height= "850dp">
        
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="420dp"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/TextView01"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="70dp"
             android:layout_marginRight="18dp"
             android:layout_marginTop="10dp"
             android:text="EMERGENCY KIT"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:textSize="20sp"
             android:textStyle="bold"
             android:typeface="serif" />

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="18dp"
             android:layout_marginRight="18dp"
             android:layout_marginTop="3dp"
             android:background="#F6E182"
             android:text="Recommended items to include in a Basic Emergency Supply Kit. This is allows you to check items that you currently have in your kit."
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#3107EE"
             android:textSize="12sp"
             android:textStyle="bold" />

         <CheckBox
             android:id="@+id/CheckBox01"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/checkBox1"
             android:text="Food, at least a three-day supply of non-perishable food"
             android:textSize="11sp" />

         <CheckBox
             android:id="@+id/CheckBox02"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/CheckBox01"
             android:text="Battery-powered or hand crank radio"
             android:textSize="11sp" />

         <CheckBox
             android:id="@+id/CheckBox03"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/CheckBox02"
             android:text="Flashlight and extra batteries"
             android:textSize="11sp" />

         <CheckBox
             android:id="@+id/CheckBox04"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/CheckBox03"
             android:text="First aid kit"
             android:textSize="11sp" />

         <CheckBox
             android:id="@+id/CheckBox05"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/CheckBox04"
             android:text="Cell phone with chargers, inverter or solar charger "
             android:textSize="11sp" />

         <CheckBox
             android:id="@+id/checkBox1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:text="Water, one gallon of water per person per day for at least 3 days, for drinking and sanitation"
             android:textSize="11sp" />

         <CheckBox
             android:id="@+id/CheckBox06"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/CheckBox05"
             android:text="Power banks"
             android:textSize="11sp" />

         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="70dp"
             android:layout_marginRight="18dp"
             android:layout_weight="0.36"
             android:text="MY PERSONAL LIST"
             android:textAlignment="center"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/TextView02"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="18dp"
             android:layout_marginRight="18dp"
             android:background="#F6E182"
             android:text="You can also add personal items like medication, pet supplies, etc by clicking the &quot;Add&quot; button."
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:textColor="#3107EE"
             android:textSize="12sp"
             android:textStyle="bold" />

         <Button
             android:id="@+id/button1"
             android:layout_width="match_parent"
             android:layout_height="35dp"
             android:layout_marginTop="5dp"
             android:text="Add" />
     </LinearLayout>
    
    </ScrollView>
    
</RelativeLayout>